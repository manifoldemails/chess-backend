  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
          "main:app", // Adjust this to your application's entry point
          "--reload",
          "--host", "0.0.0.0",
          "--port", "8000"
      ],
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal"
  },
    {
      "name": "Python: Remote Attach",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 8000
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "."
        }
      ],
      "justMyCode": true
    }
  ]
}